<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="700" prefWidth="1000" spacing="0" style="-fx-background-color: linear-gradient(to bottom right, #ffd500, #ffed4e);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="proyecto_final_pp.ViewController.GraficasController">
    <padding>
        <Insets bottom="20" left="25" right="25" top="20" />
    </padding>

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 0 0 15 0;">
        <Label fx:id="lblTitulo" style="-fx-text-fill: #2b2b2b; -fx-font-family: 'Arial Rounded MT Bold';" text="Gráficas de Reportes">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Region HBox.hgrow="ALWAYS" />
        <Button onAction="#volverAReportes" style="-fx-background-color: #2b2b2b; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 12; -fx-padding: 10 20; -fx-font-size: 14px; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(43,43,43,0.3), 10, 0, 0, 3);" text="Volver a Reportes" />
    </HBox>

    <!-- Contenedor de gráficas -->
    <VBox fx:id="chartsContainer" alignment="CENTER" spacing="20" style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 25, 0, 0, 8);" VBox.vgrow="ALWAYS" />

</VBox>