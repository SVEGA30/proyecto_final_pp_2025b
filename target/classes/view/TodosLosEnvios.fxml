<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="proyecto_final_pp.ViewController.TodosLosEnviosController" spacing="0" alignment="CENTER" prefWidth="900.0" prefHeight="700.0" style="-fx-background-color: linear-gradient(to bottom right, #ffd500, #ffed4e);">
    <padding>
        <Insets top="25.0" right="35.0" bottom="25.0" left="35.0" />
    </padding>

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-padding: 0 0 20 0;">
        <Label text="Todos los Envíos" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2b2b2b; -fx-font-family: 'Arial Rounded MT Bold';" />
        <Region HBox.hgrow="ALWAYS" />
        <Button text="Volver" onAction="#volverAlMenuPrincipal" style="-fx-background-color: #2b2b2b; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 12; -fx-padding: 10 20; -fx-font-size: 14px; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(43,43,43,0.3), 10, 0, 0, 3);" />
    </HBox>

    <!-- Filtros -->
    <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 25, 0, 0, 8);">
        <Label text="Filtrar Envíos" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2b2b2b; -fx-padding: 0 0 10 0;" />
        <HBox spacing="20.0" alignment="CENTER_LEFT">
            <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                <Label text="Estado:" style="-fx-text-fill: #444444; -fx-font-weight: bold; -fx-font-size: 13px;" />
                <ComboBox fx:id="cbFiltroEstado" promptText="Todos los estados" style="-fx-font-size: 13px; -fx-background-color: #f8f9fa; -fx-border-color: #e9ecef; -fx-border-radius: 12; -fx-background-radius: 12; -fx-padding: 12; -fx-pref-height: 40;" />
            </VBox>
            <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                <Label text="Fecha Desde:" style="-fx-text-fill: #444444; -fx-font-weight: bold; -fx-font-size: 13px;" />
                <DatePicker fx:id="dpFiltroDesde" style="-fx-font-size: 13px; -fx-background-color: #f8f9fa; -fx-border-color: #e9ecef; -fx-border-radius: 12; -fx-background-radius: 12; -fx-pref-height: 40;" />
            </VBox>
            <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                <Label text="Fecha Hasta:" style="-fx-text-fill: #444444; -fx-font-weight: bold; -fx-font-size: 13px;" />
                <DatePicker fx:id="dpFiltroHasta" style="-fx-font-size: 13px; -fx-background-color: #f8f9fa; -fx-border-color: #e9ecef; -fx-border-radius: 12; -fx-background-radius: 12; -fx-pref-height: 40;" />
            </VBox>
            <Button onAction="#aplicarFiltros" text="Aplicar Filtros" style="-fx-background-color: #2b2b2b; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 13px; -fx-background-radius: 12; -fx-padding: 12 25; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(43,43,43,0.3), 10, 0, 0, 3);" />
        </HBox>
    </VBox>

    <!-- Espacio entre secciones -->
    <Region prefHeight="20" />

    <!-- Tabla de Envíos -->
    <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 25, 0, 0, 8);" VBox.vgrow="ALWAYS">
        <Label text="Lista de Envíos" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2b2b2b; -fx-padding: 0 0 15 0;" />
        <TableView fx:id="tablaTodosEnvios" style="-fx-font-size: 13px; -fx-background-color: transparent; -fx-border-color: #e9ecef; -fx-border-radius: 12; -fx-border-width: 2;" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colIdEnvioTabla" text="ID" prefWidth="80.0" style="-fx-alignment: CENTER; -fx-font-weight: bold; -fx-text-fill: #444444;" />
                <TableColumn fx:id="colIdUsuarioTabla" text="ID Usuario" prefWidth="100.0" style="-fx-alignment: CENTER; -fx-text-fill: #444444;" />
                <TableColumn fx:id="colOrigenTabla" text="Origen" prefWidth="160.0" style="-fx-text-fill: #444444;" />
                <TableColumn fx:id="colDestinoTabla" text="Destino" prefWidth="160.0" style="-fx-text-fill: #444444;" />
                <TableColumn fx:id="colEstadoTabla" text="Estado" prefWidth="100.0" style="-fx-alignment: CENTER; -fx-text-fill: #444444;" />
                <TableColumn fx:id="colCostoTabla" text="Costo" prefWidth="90.0" style="-fx-alignment: CENTER_RIGHT; -fx-text-fill: #444444;" />
                <TableColumn fx:id="colFechaCreacionTabla" text="Fecha Creación" prefWidth="130.0" style="-fx-alignment: CENTER; -fx-text-fill: #444444;" />
                <TableColumn fx:id="colAccionesTabla" text="Acciones" prefWidth="100.0" style="-fx-alignment: CENTER; -fx-text-fill: #444444;" />
            </columns>
        </TableView>
    </VBox>

    <!-- Footer -->
    <HBox alignment="CENTER" style="-fx-padding: 20; -fx-background-color: rgba(43,43,43,0.05); -fx-background-radius: 10;">
        <Label style="-fx-text-fill: #5a5a5a; -fx-font-size: 12px;" text="© 2025 Urban Express - Sistema de Gestión de Envíos" />
    </HBox>
</VBox>